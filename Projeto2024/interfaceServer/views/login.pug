extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      .w3-bar.w3-border-bottom
          .w3-bar-item
              h2 #[b Login]
          a.w3-bar-item.w3-button(href="/home" style="position:relative; top:10px;")
                      .w3-cell-row
                          .w3-cell
                              i.fa.fa-home(style="color: #000000;")
                          .w3-cell(style="width:80%")
                              h6 #[b In√≠cio]
    
    .w3-container  
      form.w3-container(action="/login" method="POST")
        fieldset 
          legend Credenciais:
          label(for="username") Username
          input.w3-input(type="text" name="username" required)
          
          label(for="password") Password
          input.w3-input(type="password" name="password" required)

        input.w3-btn.w3-blue.w3-margin(type="submit" value="Login!")

    footer.w3-container.w3-blue
      address Generated in EngWeb24 at #{d}
