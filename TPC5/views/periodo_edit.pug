extends layout

block title
    | Editar período

block content
    form(action="/periodos/" + periodo.id, method="post")
        label(for="id") ID
        input(type="text", name="id", placeholder="ID", value=periodo.id) 

        label(for="periodo") Período
        input(type="text", name="periodo", placeholder="Período", value=periodo.periodo) 

        input(type="submit")
